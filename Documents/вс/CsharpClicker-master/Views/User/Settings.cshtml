@using CSharpClicker.Web.UseCases.GetUserSettings

@model UserSettingsDto;

@{
    Layout = "~/Views/Shared/_HatLayout.cshtml";
}

@section Styles
{
    <link href="~/css/settings.css" rel="stylesheet" />
}

<div>
    @if (Model.Avatar.Length == 0)
    {
        <img src="~/anonymous.png" height="100" />
    }
    else
    {
        <img src="data:image/png;base64, @Convert.ToBase64String(Model.Avatar)" height="100" width="100" />
    }
    <form asp-action="avatar" asp-controller="user" method="post" enctype="multipart/form-data">
        <label margin="50px" for="avatar-form-control" color="white">Изменить аватар</label>
        <input id="avatar-form-control" type="file" class="form-control mt-3 mb-3" name="avatar" accept="image/*" />
        <input id="update-avatar-submit" type="submit" value="Обновить аватар" hidden />
    </form>
</div>

@section scripts {
    <script src="~/js/settings.js"></script>
}